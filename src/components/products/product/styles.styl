@import "../../../styles/global"

.product
  padding-left: 26px
  hr
    margin-top: 100px
    margin-bottom: 40px
.desc
  margin-bottom: 5px
  margin-top: 5px
  &__title
    text-align:  center
    padding-left: 300px
  &__content
    display: flex
    &__pic
      flex: 0 0 300px
      .img
        width: 300px
        height: 234px
    &__text
      flex:1
      padding: 0 60px
      hr
        margin: 20px 0
      &__pdf
        margin-top: 25px
        .pdfIcon
          vertical-align: middle
          font-size: 20px
        .pdfSpan
          vertical-align: middle


.detail
  margin-bottom: 40px
  .title
    color: $hoverColor
    margin: 1em 0px
    font-size: 1.17em
    font-weight: bolder
  .list
    padding-left: 20px
  &__workshop
    img
      width: 31%
      margin-right: 2%
  hr
    margin: 40px 0
