
.header
  flex:0 0 auto
  display: flex
  align-items: center
  justify-content: flex-end
  height: $headerHeight
  line-height: $headerHeight
  width: 100%
  &__logo
    &__logo
      width: 30px
      height:30px

.footer
  display: flex
  flex:0 0 50px
  height: 257px
  width: 100%
  justify-content: center
  align-items: center


.body
  background-color: #f0f2f5
  display: flex
  min-height: 100vh
  flex-direction: column
  &__content
    display: flex
    flex:1
    &__sider
      flex: 0 0 30px
    &__children
      margin: 24px 16px 0
      flex: 1
      padding: 24px
      background: #ffffff



