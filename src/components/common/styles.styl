.navi
    height: 40px
    width: 100px
    clear: both
    position: relative
    &__content
        text-align: center
        line-height: 40px
        font-family: Arial, Helvetica, sans-serif
        cursor: pointer
    &__hidden
        z-index: 1000
        width: 200px
        padding: 40px
        top: 40px
        line-height: 1rem
        position: absolute
        max-height: 300px
        background-color: rgb(255,255,255)
        border: rgb(221,221,221)
