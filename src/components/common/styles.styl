.navi
  height: 40px
  width: 100px
  clear: both
  position: relative
  &__content
    text-align: center
    line-height: 40px
    font-family: Arial, Helvetica, sans-serif
    cursor: pointer
  &__hidden
    display: none
    z-index: 1000
    width: 200px
    position: relative
    max-height: 200px
    line-height: 1rem
    overflow: hidden
    max-height: 300px
    background-color: rgb(221,221,221)
    border-radius: 4px
    border: rgb(221,221,221)
    transition: max-height 2s
.menu
  display: flex
  width: 100%
  min-height: 70vh
  flex-direction: column
  &__header
    display: flex
    flex: 0 0 3rem
    .icon
        line-height: 1.5
  &__container
    width: 100% 
    display: flex
    &__navi
      margin-top: 20px
      display: flex
      flex-direction: column
      flex: 0 0 10rem
      &__title
        background-color: $bannerColor
        text-align: center
        line-height: 2rem
        flex: 0 0 2rem
      &__content
        flex: 1
      .menu
        width: 240px
        border: 1px solid #e8e8e8
        .item
          line-height: 28px !important
          height: 28px !important
    &__content
      flex: 1


.upload
  overflow: hidden

.navi:hover .navi__hidden 
    display: block


.navi__hidden:hover .navi__hidden 
    display: block

.navi:hover .navi__content 
    background: $bannerColor
