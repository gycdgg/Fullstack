
.navi
  text-align: center
  line-height: 40px
  height: 40px
  width: 100px
  border-radius: 4px
  font-family: Arial, Helvetica, sans-serif
  cursor: pointer
  &:hover
    background-color: $hoverColor
    z-index: 1
    font-size: 15px
    opacity : 0.8
    box-shadow: 0 2px 2px

.content
  background-color: white
  padding: 20px
  width: auto
  height: auto
  box-shadow: 1px 1px 1px
  opacity : 0.9
  border-radius: 4px
  display: flex
  li
    list-style: none
    cursor: pointer
    &:hover
      color: $hoverColor
  p
    cursor: pointer
    font-size: 15px
    font-weight: bolder
    &:hover
      color: $hoverColor
    


.menu
  display: flex
  width: 100%
  min-height: 70vh
  flex-direction: column
  &__header
    display: flex
    flex: 0 0 3rem
    .icon
        line-height: 1.5
  &__container
    width: 100% 
    display: flex
    &__navi
      margin-top: 20px
      display: flex
      flex-direction: column
      flex: 0 0 10rem
      &__title
        background-color: $bannerColor
        text-align: center
        line-height: 2rem
        flex: 0 0 2rem
      &__content
        flex: 1
      .menu                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            
        width: 240px
        border: 1px solid #e8e8e8
        .item
          line-height: 28px !important
          height: 28px !important
