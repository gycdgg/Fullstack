$btn-color = #16a4cb;
.bg
  background-color: #FFF;
  height: 100%;
  width: 100%;
  text-align :center;
  min-height :500px
  display :flex;
  align-items :center;
  position :relative;
  margin-bottom :64px;
  &__head
    background-color :#000;
    width :100%;
    height :64px;
    position :absolute;
    top:-64px;
  &__content
    width 600px;
    margin:0 auto;
    img
      width: 100%;
    &__errorMsg
      color: #333;
      font-size: 24px;
      margin-top: 50px;
    &__link
      display: inline-block;
      background-color: $btn-color;
      margin-top: 30px;
      width: 108px;
      height: 36px;
      line-height 36px;
      border: none;
      color: #fff;
      &:hover
        color: #fff;